{
  "author": "https://www.enkrypt.com",
  "homepage_url": "https://www.enkrypt.com",
  "browser_action": {
    "default_icon": {
      "16": "assets/img/icons/icon16.png",
      "32": "assets/img/icons/icon32.png",
      "48": "assets/img/icons/icon48.png",
      "192": "assets/img/icons/icon192.png"
    },
    "default_title": "Enkrypt",
    "default_popup": "action.html"
  },
  "version": "0.1.0",
  "manifest_version": 2,
  "name": "Enkrypt",
  "short_name": "Enkrypt",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "clipboardWrite",
    "activeTab",
    "notifications"
  ],
  "background": {
    "scripts": ["scripts/background.js", "dev/hot-reload.js"],
    "persistent": true
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+E",
        "mac": "Alt+Shift+E",
        "chromeos": "Alt+Shift+E",
        "linux": "Alt+Shift+E"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "js": ["scripts/contentscript.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "description": "Enkrypt Chrome Extension - One extension to rule them all",
  "icons": {
    "16": "assets/img/icons/icon16.png",
    "32": "assets/img/icons/icon32.png",
    "48": "assets/img/icons/icon48.png",
    "192": "assets/img/icons/icon192.png"
  },
  "web_accessible_resources": ["scripts/inject.js"],
  "minimum_chrome_version": "63",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
