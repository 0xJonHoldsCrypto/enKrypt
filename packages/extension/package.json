{
  "name": "@enkryptcom/extension",
  "displayName": "enKrypt",
  "version": "0.0.1",
  "description": "enKrypt web extension for web3 applications",
  "private": true,
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf enKrypt-extension.zip && jszip-cli add build -o ./enKrypt-extension.zip",
    "pack:crx": "crx pack build -o enKrypt-extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./build --filename enKrypt-extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./build --target=chromium",
    "start:firefox": "web-ext run --source-dir ./build --target=firefox-desktop",
    "clear": "rimraf build enKrypt-extension.*",
    "lint": "eslint 'src/**/*.{json,ts,js,vue}' --fix"
  },
  "devDependencies": {
    "@enkryptcom/extension-bridge": "^0.0.1",
    "@ffflorian/jszip-cli": "^3.1.6",
    "@iconify/json": "^2.0.36",
    "@types/chai": "^4.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.17",
    "@types/webextension-polyfill": "^0.8.2",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@vitejs/plugin-vue": "^2.2.0",
    "@vue/compiler-sfc": "^3.2.31",
    "@vueuse/core": "^7.6.1",
    "chai": "^4.3.6",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-module-resolver": "^1.4.0",
    "eslint-plugin-vue": "^8.4.1",
    "esno": "^0.14.1",
    "fs-extra": "^10.0.0",
    "kolorist": "^1.5.1",
    "mocha": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5",
    "typescript-eslint": "0.0.1-alpha.0",
    "unplugin-auto-import": "^0.5.11",
    "unplugin-icons": "^0.13.1",
    "unplugin-vue-components": "^0.17.18",
    "vite": "^2.8.1",
    "vite-plugin-windicss": "^1.7.0",
    "vue": "^3.2.31",
    "vue-demi": "^0.12.1",
    "vue-eslint-parser": "^8.2.0",
    "web-ext": "^6.7.0",
    "webextension-polyfill": "^0.8.0"
  },
  "dependencies": {}
}
